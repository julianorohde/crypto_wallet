<p style="color: green"><%= notice %></p>

<div class="jumbotron">
  <%= @coin.description %>
  <%= @coin.acronym %>
  <%= image_tag @coin.url_image, size: "25x25" %>
  <%= link_to t('links.edit'), edit_coin_path(@coin), class:"btn btn-dark btn-sm", role:"button" %>
  <%= link_to t('return_coins'), coins_path, class:"btn btn-dark btn-sm", role:"button" %>
  <%= button_to t('erase_coin'), @coin, method: :delete, class:"btn btn-dark btn-sm", role:"button"%>
</div>